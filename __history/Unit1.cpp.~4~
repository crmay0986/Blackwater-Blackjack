void __fastcall TForm1::OptionsButtonClick(TObject *Sender)
{
	float x = OptionsButton -> Position	-> X;
	float y = OptionsButton -> Position -> Y;
	TPointF buttonLocalPoint = OptionsButton -> LocalToScreen(Point(x, y));
}
