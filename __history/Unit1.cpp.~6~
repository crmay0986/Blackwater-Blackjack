//---------------------------------------------------------------------------

#include <fmx.h>
#pragma hdrstop

#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{

}
//---------------------------------------------------------------------------
void __fastcall TForm1::OptionsButtonClick(TObject *Sender)
{
	// Get Cursor Position
	TPoint cursor_position;
	GetCursorPos(&cursor_position);
	// Link Popup to display at cursor position
    OptionsPopup -> Popup(cursor_position.X, cursor_position.Y);

}
//---------------------------------------------------------------------------

